function [output_image] = rgb2grays(input_image)
% converts an RGB into grayscale by using 4 different methods
% converts an RGB image into normalized rgb
R = input_image(:,:,1);
G = input_image(:,:,2);
B = input_image(:,:,3);

n = input('1: lightness method. 2: average method. 3: output_image 4. Matlab rgb2gray. Enter a number:');

% switch n
%     case 1
%         % ligtness method
%         output_image = (max(max(R,G),B) + min(min(R,G),B))./2;
%     case 2
%         % average method
%         output_image = (R+G+B)./3;
%     case 3
%         % luminosity method
%         output_image = 0.21.*R + 0.72.*G + 0.07.*B;
%     case 4
%         % built-in MATLAB function 
%         output_image = rgb2gray(input_image);


        % ligtness method
        output_image1 = (max(max(R,G),B) + min(min(R,G),B))./2;

        % average method
        output_image2 = (R+G+B)./3;

        % luminosity method
        output_image3 = 0.21.*R + 0.72.*G + 0.07.*B;

        % built-in MATLAB function 
        output_image4 = rgb2gray(input_image);

        
    figure
    subplot(2, 2, 1);
    imshow(output_image1);
    title('Lightness method');

    subplot(2, 2, 2);
    imshow(output_image2);
    title('Average method');

    subplot(2, 2, 3);
    imshow(output_image3);
    title('Luminosity method');

    subplot(2, 2, 4);
    imshow(output_image4);
    title('Built-in rgb');    
end
end

