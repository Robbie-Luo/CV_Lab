function [ H, row, column ] = harris_corner_detector()

img = imread("person_toy/00000001.jpg");



% Calculate the direction both directions.
h = fspecial('sobel');
v = h';
Ix = imfilter(img,h)

Iy = imfilter(img,v)

G = fspecial('gaussian');

[Gx, Gy] = gradient(G);
% Aplify the gradient to get more signal 
A =  imfilter(Ix .^ 2,Gx,'same' );  % x_gradient.^2;
C =  imfilter(Iy .^ 2,Gy,'same' );  % x_gradient.*y_gradient;
B =  imfilter(Ix .* Iy ,G, 'same'); 
% Compute the sum of products ie smoothing 

H = (A.*C - B.^2) - 0.04*((A+C).^2);
% 
% BW = (H >= 140)*255;

imshow(H)